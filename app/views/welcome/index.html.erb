<p id="notice"><%= notice %></p>

<div class="welcome_zona">
	<% @zone1.each do |zone| %>
	<%if zone.image_id	
		@imagen = Image.find(zone.image_id)
		@image = @imagen.image_url
	else 
		@image ="/data/dommy.jpg"
	end %>	
	<div class="welcome_show_cuadro">
	<div class="centra_img"><%= link_to image_tag(@image), equipment_path(zone) %></div>
	<div class="ajustar_titulo"><%= link_to zone.name, equipment_path(zone), class: "ajustar_titulo" %></div>
	<div class="detalles">
		<strong>Marca:</strong> <%= zone.brand.name %><br>
		<strong>Modelo:</strong> <%= zone.modelo %><br>		
		<strong>Año:</strong> <%= zone.year %><br>
		<%if zone.publication_type == 1 %>Venta<% else %>Renta<% end %>: <%= number_to_currency(zone.precio) %><br/> <%= zone.currency.name %><br>
		<img src="/images/iconos/mapa.png"> <%= zone.state.name %>, <%= zone.country.name %>
	</div>
	<% end %>
</div>	

