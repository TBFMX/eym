<div class="grid">
    <div class="filtros">
    <%= form_tag '/venta', :method => 'get' do %>
    <%#= text_field_tag :search, params[:search] %>
    <%= select("equipment", "year", Equipment.all.collect {|p| [ p.year, p.year ] }.uniq, {include_blank: 'AÃ±o'}) %>
    <br>
    <%= select("equipment", "color", Equipment.all.collect {|p| [ p.color, p.color ] }.uniq, {include_blank: 'Color'}) %>
    <br>
    <%= select("equipment", "brand_id", Brand.all.collect {|p| [ p.id, p.name ] }.uniq, {include_blank: 'Marca'}) %>
    <br>
    <%= select("equipment", "package_id", Package.all.collect {|p| [ p.id, p.name ] }.uniq, {include_blank: 'Paquete'}) %>
    <br>
    <%= select("equipment", "preciod", Equipment.all.collect {|p| [ p.precio, number_to_currency(p.precio) ] }.uniq, {include_blank: 'Desde'}) %>
    <br>
    <%= select("equipment", "precioh", Equipment.all.collect {|p| [ p.precio, number_to_currency(p.precio) ] }.uniq, {include_blank: 'Hasta'}) %>
    <br>
    <%= select("equipment", "modelo", Equipment.all.collect {|p| [ p.modelo, p.modelo ] }.uniq, {include_blank: 'Modelo'}) %>
    <br>
    <%= select("equipment", "currency_id", Equipment.all.collect {|p| [ p.currency_id, p.currency_id ] }.uniq, {include_blank: 'Moneda'}) %>
    <br>

    <%= select("equipment", "country_id", Equipment.all.collect {|p| [ p.country_id, p.country_id ] }.uniq, {include_blank: 'Pais'}) %>
    <br>
    <%= select("equipment", "state_id", Equipment.all.collect {|p| [ p.state_id, p.state_id ] }.uniq, {include_blank: 'Estado'}) %>
    <br>
    <%= select("equipment", "ciudad", Equipment.all.collect {|p| [ p.ciudad, p.ciudad ] }.uniq, {include_blank: 'Ciudad'}) %>
    <br>

    <%#= select("equipment", "category_id", Category.all.collect {|p| [ p.title, p.id ] }.uniq, {include_blank: 'Categoria'}) %>
    <br>

    <%= submit_tag "Filtrar", :name => nil %>
    <% end %>
    </div>


    <div class="galeria">
    <% @equipments.each do |equipment| %>
        <div class="equipos">
            <div class="imagenes">
                <% @images = Image.find(equipment.image_id) %>
                <% if @images.image_url %>
                    <div class="imagen">
                        <%= link_to image_tag(@images.image_url ), equipment_path(equipment) %>
                    </div>
                <%else %>
                    <div class="imagen"><img src="/data/dummy.jpg"></div>  
                <% end %>  
            </div>
            <div class="datos"><%= link_to equipment.name, equipment_path(equipment) %>
                <%#= equipment.name %><br />
                <%= number_to_currency(equipment.currency_id) %>
            </div>
        </div>
     <% end %>                                      
    </div>   


</div>


