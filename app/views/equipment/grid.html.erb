

<%= form_tag '/venta', :method => 'get' do %>
  <p>
    <%#= text_field_tag :search, params[:search] %>
    <%= label :year, "Año" %><br>
    <%= select("equipment", "year", Equipment.all.collect {|p| [ p.year, p.year ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :color, "Color" %><br>
    <%= select("equipment", "color", Equipment.all.collect {|p| [ p.color, p.color ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :brand_id, "Marca" %><br>
    <%= select("equipment", "brand_id", Brand.all.collect {|p| [ p.id, p.name ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :package_id, "Paquete" %><br>
    <%= select("equipment", "package_id", Package.all.collect {|p| [ p.id, p.name ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :preciod, "Desde" %><br>
    <%= select("equipment", "preciod", Equipment.all.collect {|p| [ p.precio, number_to_currency(p.precio) ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :precioh, "Hasta" %><br>
    <%= select("equipment", "precioh", Equipment.all.collect {|p| [ p.precio, number_to_currency(p.precio) ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :modelo , "Modelo" %><br>
    <%= select("equipment", "modelo", Equipment.all.collect {|p| [ p.modelo, p.modelo ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :currency_id , "Moneda" %><br>
    <%= select("equipment", "currency_id", Equipment.all.collect {|p| [ p.currency_id, p.currency_id ] }.uniq, {include_blank: 'Todos'}) %>
    <br>

    <%= label :country_id , "Pais"%><br>
    <%= select("equipment", "country_id", Equipment.all.collect {|p| [ p.country_id, p.country_id ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :state_id ,"Estado"%><br>
    <%= select("equipment", "state_id", Equipment.all.collect {|p| [ p.state_id, p.state_id ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :ciudad ,"Ciudad"%><br>
    <%= select("equipment", "ciudad", Equipment.all.collect {|p| [ p.ciudad, p.ciudad ] }.uniq, {include_blank: 'Todos'}) %>
    <br>
    <%= label :category_id ,"Categoria"%><br>
    <%= select("equipment", "category_id", Category.all.collect {|p| [ p.title, p.id ] }.uniq, {include_blank: 'Todos'}) %>
    <br>

    <%= submit_tag "Filtrar", :name => nil %>
  </p>
  

<% end %>
