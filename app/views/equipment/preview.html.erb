  <%= hidden_field_tag :package_id %>
  <%= hidden_field_tag :image_id %>
  <%= hidden_field_tag :name %>
  <%= hidden_field_tag :etiquetas %>
  <%= hidden_field_tag :description %>    
  <%= hidden_field_tag :brand_id %>
  <%= hidden_field_tag :modelo %>
  <%= hidden_field_tag :year %>
  <%= hidden_field_tag :color %>
  <%= hidden_field_tag :country_id %>
  <%= hidden_field_tag :state_id %>
  <%= hidden_field_tag :ciudad %>
  <%= hidden_field_tag :user_id %>
  <%= submit_tag "Guardar"  %>
<% end %>