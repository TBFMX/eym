<h1>Lista de Anuncios</h1>
<% @equipment.each do |equipment| %>
<div class="lista_show_equipment">
  <div class="lista_image"><img src="jo.jpg"></div>
  <div class="datos">
    <div class="titulo">
      <%= link_to equipment.name, "equipment/" + equipment.id.to_s %>
    </div>
    <div class="descripcion">
     Marca:<%= equipment.brand_id %> | Modelo: <%= equipment.modelo %> 
     <br>
     AÃ±o: <%= equipment.year %> | Color: <%= equipment.color %>
    </div>
  </div>
  <div class="precio">
    Precio Venta: <%= number_to_currency(equipment.precio_venta) %> <%= equipment.moneda_venta %> <br>
    Precio Renta: <%= number_to_currency(equipment.precio_renta) %> <%= equipment.moneda_renta %>
  </div>
  <div class="opciones">
    <%= link_to 'Edit', edit_equipment_path(equipment) %> 
    <%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>    
</div>
<% end %>
