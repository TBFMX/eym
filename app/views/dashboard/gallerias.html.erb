<h1>Dashboard#gallerias</h1>

<div class="dashboard_menu">
	<%= render 'menu' %>
</div>


<h1>Listing galleries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Equipment</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleriesWhere.each do |gallery| %>
      <tr>
        <td><%= gallery.title %></td>
        <td><%= gallery.equipment_id %></td>
        <td><%= gallery.user_id %></td>
        <td><%= link_to 'Show', galeria_show_path(@equips,gallery) %></td>
        <%# if @permiso %>
          <td> <%= link_to 'Agregar imagen', imagen_nueva_path(@equips,gallery.title) %>  <%#= link_to 'Edit', edit_gallery_path(gallery) %></td>
          <td><%= link_to 'Agregar Video', video_nuevo_path(@equips,gallery.title) %><%#= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        <%# end %>


        <!--<td> <%#= link_to 'Show', gallery %></td>
        <td><%#= link_to 'Edit', edit_gallery_path(gallery) %></td>-->
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

